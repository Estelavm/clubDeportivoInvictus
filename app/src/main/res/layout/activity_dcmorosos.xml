<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".DCMorosos">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="-180dp"
        android:rotation="36"
        android:rotationY="180"
        android:src="@drawable/casco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:src="@drawable/logo"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@color/black"
            android:text="Listado de morosos:"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <EditText
            android:layout_width="360dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_edit_text_white"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/placeholder"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/btn_atras"
                android:layout_width="150dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartan_bold"
                android:text="AtrÃ¡s"
                android:textSize="20sp"
                app:cornerRadius="16dp"
                app:strokeWidth=".4dp" />

            <Button
                android:id="@+id/btn_comprobante"
                android:layout_width="180dp"
                android:layout_height="68dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartan_bold"
                android:text="Comprobante"
                android:textSize="20sp"
                app:cornerRadius="16dp"
                app:strokeWidth=".4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>