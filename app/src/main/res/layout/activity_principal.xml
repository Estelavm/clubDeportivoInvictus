<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".PrincipalActivity">

    <ImageView
        android:layout_width="680dp"
        android:layout_height="680dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="150dp"
        android:rotation="-24"
        android:rotationY="180"
        android:src="@drawable/casco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/btn_registrar_usuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:strokeColor="@color/logo_stroke"
        app:strokeWidth=".8dp" />

    <Button
        android:id="@+id/btn_registrar_usuarios"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/leaguespartan_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Registrar Usuario"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_perfil_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:strokeWidth=".4dp" />

    <Button
        android:id="@+id/btn_perfil_usuario"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/leaguespartan_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Perfil de Usuario"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_pago_socio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registrar_usuarios"
        app:strokeWidth=".4dp" />

    <Button
        android:id="@+id/btn_pago_socio"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/leaguespartan_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Pago Socio"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_pago_actividad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_perfil_usuario"
        app:strokeWidth=".4dp" />


    <Button
        android:id="@+id/btn_pago_actividad"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/leaguespartan_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Pago Actividad"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_cerrar_sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pago_socio"
        app:strokeWidth=".4dp" />

    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_margin="60dp"
        android:backgroundTint="@color/btn"
        android:fontFamily="@font/leaguespartan_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="Cerrar sesiÃ³n"
        android:textColor="#FC4141"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0.4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>